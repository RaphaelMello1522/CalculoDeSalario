@using Domain.Entities;
@model People

@{
    ViewData["Title"] = "Details";
}

<style>
    .img-thumbnail{
        width: 175px;
        height: 175px;
        border-radius: 50%;
        margin-top: 40px;
        margin-left: 80px;
    }

    .h4{
        text-align: center
    }

    .col-md-1{
        margin-left: 40px
    }

    .paragrafo{
        text-align: justify
    }

    .titulo{
        text-align: center;
        margin-top: 20px;
    }

    .descricao{
        text-align: center;
    }
    .botoes{
        margin-left: 80px;
    }
</style>


<div class="row">
<div class="col-md-12">
        @if(Model.Sexo == "Masculino")
        {
            <h4 class="titulo">Detalhes do Funcionário @Model.Name</h4>
        }
        else
        {
            <h4 class="titulo">Detalhes da Funcionária @Model.Name</h4>
        }

</div>
    <p style="text-align: right; padding-left: 120px">Setor: @Model.Cargo.NomeCargo | Valor Hora: @string.Format("{0:R$0.00}", Model.Cargo.ValueHour)</p>
</div>


<div>
    <hr />
    <dl class="row">
        <div class="col-md-4">
            <img class="img-thumbnail" src="~/images/@Model.PictureSource" alt="erro">
            <br/>
            <br/>
            <div class="botoes">
                <a asp-action="Edit"  asp-route-id="@Model?.Id">Editar</a> |
                <a asp-action="Delete"  asp-route-id="@Model?.Id">Remover</a> |
                <a asp-action="Index">Voltar</a>
            </div>
        </div>
        <div class="col-md-7">
            <p class="descricao">Descrição do Cargo:</p>
            <hr/>

            <p class="paragrafo">@Model.Cargo.DescricaoCargo</p>
            <hr/>

        </div>


    </dl>
</div>

