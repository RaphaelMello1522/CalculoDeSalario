@model List<CalculoDeSalario.Models.People>

@{
    ViewData["Title"] = "Quadro de Funcionários";
}

<style>
    .img-thumbnail {
       width: 318px;
       height: 240px;
       align-content: center;

    }
    .titulo{
        text-align: center;
        padding-top: 20px;
        
    }

</style>
<div class="row">
<div class="col-lg-12">
<h3 class="titulo">Quadro de Funcionários</h3>
<p style="text-align: right; padding-right: 50px;" > 
    <a asp-action="Create">Novo Funcionário</a>
</p>
    </div>

</div>

<div class="row">
@foreach (var item in Model)
{
        <div class="col-md-4" style="padding-top: 40px">
            <div class="card" style="width: 20rem; ">
                    <img class="img-thumbnail" src="~/images/@item.PictureSource" alt="erro">
                    <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a>
                </div>
            </div>
        </div>
}
        </div>


