@using Domain.Entities;
@model List<People>

@{
    ViewData["Title"] = "Quadro de Funcionários";
}

<style>
    .img-thumbnail {
        width: 175px;
       height: 175px;
       border-radius: 20%;
       margin-left: 20px;

    }
    .titulo{
        text-align: center;
        padding-top: 20px;
        
    }

    .card{
        background-color: #FAF0E6;
        border-radius: 5%;
    }

</style>
<div class="row">
<div class="col-lg-12">
<h3 class="titulo">Quadro de Funcionários</h3>
<p style="text-align: right; padding-right: 50px;" > 
    <a asp-action="Create">Novo Funcionário</a>
</p>
    </div>

</div>

<div class="row">
@foreach (var item in Model)
{
        <div class="col-sm-2" style="padding-top: 40px">
            <img class="img-thumbnail" src="~/images/@item.PictureSource" alt="~/images/user.jpg">
        </div>

        <div class="col-md-4" style="padding-top: 40px">

            <div class="card" style="width: 20rem; ">
                    <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">Atua na empresa desde @DateTime.Now.</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Mais detalhes</a>
                </div>
            </div>
        </div>
}
        </div>


